{
  "name": "@profpowell/http-component",
  "version": "0.2.0",
  "description": "Web components for displaying HTTP request/response data",
  "type": "module",
  "main": "dist/http-component.js",
  "module": "dist/http-component.js",
  "types": "http-component.d.ts",
  "exports": {
    ".": {
      "types": "./http-component.d.ts",
      "import": "./dist/http-component.js",
      "default": "./dist/http-component.js"
    }
  },
  "files": [
    "dist",
    "http-component.d.ts",
    "custom-elements.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "analyze": "cem analyze --litelement",
    "prepublishOnly": "npm run build && npm run analyze"
  },
  "keywords": [
    "web-components",
    "http",
    "console",
    "educational",
    "debugging",
    "devtools",
    "network",
    "waterfall",
    "http-viewer"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProfPowell/http-component.git"
  },
  "bugs": {
    "url": "https://github.com/ProfPowell/http-component/issues"
  },
  "homepage": "https://github.com/ProfPowell/http-component#readme",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@playwright/test": "^1.57.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "vite": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "customElements": "custom-elements.json"
}

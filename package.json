{
  "name": "@profpowell/http-component",
  "version": "0.1.0",
  "description": "Dependency-free vanilla web components for displaying HTTP request/response data",
  "type": "module",
  "main": "./src/http-console.js",
  "module": "./src/http-console.js",
  "types": "./src/http-console.d.ts",
  "exports": {
    ".": {
      "types": "./src/http-console.d.ts",
      "default": "./src/http-console.js"
    },
    "./http-console": {
      "types": "./src/http-console.d.ts",
      "default": "./src/http-console.js"
    },
    "./http-waterfall": {
      "types": "./src/http-waterfall.d.ts",
      "default": "./src/http-waterfall.js"
    },
    "./http-interceptor": {
      "types": "./src/http-interceptor.d.ts",
      "default": "./src/http-interceptor.js"
    }
  },
  "files": [
    "src",
    "demo",
    "README.md",
    "LICENSE",
    "CLAUDE.md",
    "custom-elements.json"
  ],
  "scripts": {
    "dev": "http-server -p 8081 -c-1 -o /demo",
    "start": "npm run dev",
    "test": "node --test test/*.test.js",
    "test:watch": "node --test --watch test/*.test.js",
    "test:coverage": "node --test --experimental-test-coverage test/*.test.js",
    "test:browser": "web-test-runner",
    "test:browser:watch": "web-test-runner --watch",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "format": "prettier --write \"**/*.{js,json,html,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,html,css,md}\"",
    "analyze": "cem analyze",
    "analyze:watch": "cem analyze --watch",
    "docs": "jsdoc -c jsdoc.json",
    "prepare": "npm run analyze"
  },
  "keywords": [
    "web-components",
    "http",
    "console",
    "educational",
    "debugging",
    "devtools",
    "network",
    "waterfall",
    "http-viewer"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProfPowell/http-component.git"
  },
  "bugs": {
    "url": "https://github.com/ProfPowell/http-component/issues"
  },
  "homepage": "https://github.com/ProfPowell/http-component#readme",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@web/test-runner": "^0.20.2",
    "eslint": "^9.39.1",
    "http-server": "^14.1.1",
    "jsdoc": "^4.0.5",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "customElements": "custom-elements.json"
}
